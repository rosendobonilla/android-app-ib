<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cesto inteligente"
        android:textAlignment="center"
        android:layout_marginTop="60px"
        android:textSize="35sp"
        android:textStyle="normal"/>

    <ImageView
        android:id="@+id/imagen_main"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:src="@drawable/clasificar"
        android:layout_below="@+id/titulo"/>

    <Button
        android:id="@+id/boton_main_camara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagen_main"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/buttons"
        android:text="Comenzar"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/boton_main_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_main_camara"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/buttons"
        android:text="Cerrar sesiÃ³n"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</RelativeLayout>